overlayZIndex = 100000
overlayBackColor = rgba(0,0,0,0.5)

#xAlert_overlay
	display: none
	position: fixed
	top: 0
	left: 0
	width: 100%
	height: 100%
	z-index: overlayZIndex
	background-color: overlayBackColor
	
#xAlert_OKButton
	display: block
	min-width: 50px
	min-height: 30px
	margin-top: 5px
	margin-bottom: 5px
	margin-left: auto
	margin-right: auto
	background-color: green
	
#xAlert_text
	display: block
	padding: 20px
	max-height: 80%
	max-width: 100%
	margin-left: auto
	margin-right: auto
	text-align: center
	
#xAlert_title
	padding: 20px
	max-height: 20%
	max-width: 100%
	margin-left: auto
	margin-right: auto
	text-align: center
	
#xAlert_container
	display: block
	padding: 0px
	max-height: 90%
	max-width: 100%
	margin-left: auto
	margin-right: auto
	text-align: center
	
#xAlert_box
	display: none
	position: fixed
	top: 0
	left: 0
	maxWidth: 35%
	maxHeight: 50%
	padding: 10px
	text-align: center
	background-color: white
	border: 1px solid gray
	z-index: overlayZIndex + 1
	


